{
  "manifest_version": 3,
  "name": "PhantomView",
  "version": "1.0.0",
  "description": "Live viewer analytics and chat interface for Solana memecoins",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PhantomView"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
} 