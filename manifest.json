{
  "manifest_version": 3,
  "name": "PhantomView",
  "version": "0.8.7",
  "description": "Real-time viewer analytics & embedded chat for Solana trading platforms.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],

  "action": {
    "default_title": "PhantomView - Solana Analytics",
    "default_icon": {
      "16": "icons/PhantomView-32-optimized.png",
      "32": "icons/PhantomView-32-optimized.png",
      "48": "icons/PhantomView-48-optimized.png"
    }
  },
  "icons": {
    "16": "icons/PhantomView-32-optimized.png",
    "32": "icons/PhantomView-32-optimized.png",
    "48": "icons/PhantomView-48-optimized.png",
    "64": "icons/PhantomView-48-optimized.png",
    "96": "icons/PhantomView-48-optimized.png",
    "128": "icons/PhantomView-48-optimized.png",
    "256": "icons/PhantomView-48-optimized.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/PhantomViewtransparent.png", "firebase-config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
